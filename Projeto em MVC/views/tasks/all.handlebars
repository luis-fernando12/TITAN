<h1>Todas as tasks</h1>
<hr>
<ul>
    {{#each tasks}}
    <li>
        <a href="/">{{this.title}}</a>
        <form action="/tasks/updatestatus" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="hidden" name="done" value="{{this.done}}">
            <button type="submit">
                <i class="bi bi-check2"></i>
            </button>
        </form>
     <a class="btn-link" href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tasks/remove" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">
                <i class="bi bi-x-lg"></i>
            </button>
        </form>
    </li>
    {{/each}}
</ul>

